property int_prop: int;
global counter = 0;

fn counter_updater() {
    loop {
        counter = counter + 1;
        if counter >= 5 {
            break;
        }
        wait;
    }
}

spawn counter_updater();

loop {
    int_prop = counter;
    if counter >= 5 {
        break;
    }
    wait;
}
