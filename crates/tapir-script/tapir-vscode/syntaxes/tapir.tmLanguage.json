{
  "name": "Tapir Script",
  "scopeName": "source.tapir",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.tapir",
      "match": "#.*$"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tapir",
          "match": "\\b(if|else|loop|break|continue|return|wait|then)\\b"
        },
        {
          "name": "keyword.other.tapir",
          "match": "\\b(fn|extern|event|spawn|trigger|var|global|property)\\b"
        }
      ]
    },
    "types": {
      "name": "support.type.tapir",
      "match": "\\b(int|fix|bool)\\b"
    },
    "constants": {
      "name": "constant.language.tapir",
      "match": "\\b(true|false)\\b"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tapir",
          "match": "-?[0-9]+\\.[0-9]*"
        },
        {
          "name": "constant.numeric.integer.tapir",
          "match": "-?[0-9]+"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.tapir",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.arithmetic.tapir",
          "match": "(\\+|-|\\*|//|%%|/|%)"
        },
        {
          "name": "keyword.operator.logical.tapir",
          "match": "(\\|\\||&&)"
        },
        {
          "name": "keyword.operator.assignment.tapir",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.tapir",
          "match": "->"
        }
      ]
    },
    "functions": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.tapir" }
      }
    },
    "identifiers": {
      "name": "variable.other.tapir",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  }
}
